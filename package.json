{
  "name": "zulipbot",
  "version": "1.0.0",
  "description": "GitHub workflow bot for @zulip",
  "main": "src/index.js",
  "engines": {
    "node": "*",
    "npm": "*"
  },
  "files": [
    "src"
  ],
  "dependencies": {
    "body-parser": "^1.17.2",
    "ejs": "^2.5.5",
    "express": "^4.15.3",
    "github": "^9.2.0",
    "mz": "2.6.0",
    "nodegit": "0.18.3",
    "snekfetch": "^3.1.11",
    "zulip-js": "^1.0.12"
  },
  "devDependencies": {
    "chai": "^4.0.0",
    "eslint": "^4.0.0",
    "eslint-config-xo-space": "^0.16.0",
    "gulp": "^3.9.1",
    "gulp-coveralls": "^0.1.4",
    "gulp-eslint": "^4.0.0",
    "gulp-exclude-gitignore": "^1.1.1",
    "gulp-istanbul": "^1.1.2",
    "gulp-line-ending-corrector": "^1.0.1",
    "gulp-mocha": "^4.3.1",
    "gulp-nsp": "^2.4.2",
    "gulp-plumber": "^1.1.0",
    "inquirer": "^3.1.0",
    "mocha": "^3.4.2",
    "node-cmd": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "xo-space",
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "quotes": ["error", "double"],
      "indent": ["error", 2, {
        "ObjectExpression": 1,
        "SwitchCase": 1,
        "MemberExpression": 0
      }],
      "space-before-function-paren": ["error", "never"],
      "curly": ["error", "multi-line"],
      "one-var": ["error", {
        "initialized": "never"
      }],
      "camelcase": "off",
      "arrow-parens": [2, "as-needed", {
        "requireForBlockBody": true
      }],
      "max-nested-callbacks": ["error", 7],
      "max-params": ["error", 10],
      "capitalized-comments": ["off"],
      "no-multi-assign": ["off"]
    }
  },
  "scripts": {
    "start": "node ./src/index.js",
    "prepublish": "gulp prepublish",
    "test": "gulp"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/zulip/zulipbot.git"
  },
  "keywords": [
    "zulip",
    "bot",
    "bots",
    "github",
    "workflow",
    "zulipbot",
    "synicalsyntax"
  ],
  "author": "Cynthia Lin <cynthialin1004@gmail.com> (http://clin-dump.co.nf)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zulip/zulipbot/issues"
  },
  "homepage": "https://github.com/zulip/zulipbot#readme"
}
